<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <% @post.body = '<p class="intro"><span class="first-letter">W</span>elcome.</p><p>Next P</p>' if @post.body.blank? %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class=field">
    <%= f.label :tags %>
    <input type="text" id="tags" name="tags" value="<%= @post.tags.join(',') %>" />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
