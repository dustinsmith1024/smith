<div class="post" >
  <h2><%= link_to post.title, post %></h2>
  <p><%= post.updated_at.to_s(:long) %></p>
  <div><%= raw(post.body) %></div>
  <p>Tagged with: <%= post.tags.to_sentence %></p>
  <p>
    <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="dustinsmith1024">Tweet</a>
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
  </p>
  <p class="footer"> 
  <% if current_user %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete if current_user %>
  <% end %>
  </p>
</div>
